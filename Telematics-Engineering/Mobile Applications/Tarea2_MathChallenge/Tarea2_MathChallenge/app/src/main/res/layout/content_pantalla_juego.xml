<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="christian.lopez.trabajos.com.tarea2_mathchallenge.PantallaJuego"
    tools:showIn="@layout/activity_pantalla_juego"
    android:background="#d32f2f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OPERACION"
        android:id="@+id/textViewOperacion"
        android:layout_above="@+id/editTextRespuestaOperacion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRespuestaOperacion"
        android:hint="PONGA SU RESPUESTA AQUI"
        android:layout_above="@+id/buttonComprobar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPROBAR"
        android:id="@+id/buttonComprobar"
        android:onClick="jugar"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewOperacion"
        android:layout_marginBottom="69dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/math"
        android:layout_above="@+id/textViewOperacion"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
